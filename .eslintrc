{
  "extends": "@wyattades/eslint-config",
  "rules": {
    "react/jsx-filename-extension": "off"
  },
  "overrides": [
    {
      "files": ["lib/sketches/**/*", "lib/fluid.js"],
      "rules": {
        "@typescript-eslint/no-use-before-define": "off",
        "prefer-const": "off"
      }
    },
    {
      "files": ["scripts/**/*"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
